<h1>Burger manifest</h1>
<div class="freshBurgers">
<h2>Pile of burgers awaiting devouring.</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Chow Down</button>
        </form>
        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">

        <button type="submit">Clear</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
</div>

<div class= "eatenBurgers">
<h2>Burgers thus far devoured.</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Time to eat!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="addBurger">
<h2>Order another burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="bu">burger name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

